CREATE TABLE SENIOR_TBL (
    SENIOR_ID                VARCHAR2(10) PRIMARY KEY,
    FULL_NAME                VARCHAR2(50),
    AGE                      NUMBER(3),
    GENDER                   VARCHAR2(10),
    PRIMARY_PHONE            VARCHAR2(15),
    CHRONIC_CONDITIONS       VARCHAR2(100),
    EMERGENCY_CONTACT_NAME   VARCHAR2(50),
    EMERGENCY_CONTACT_PHONE  VARCHAR2(15),
    STATUS                   VARCHAR2(10)
);
CREATE TABLE PROGRAM_TBL (
    PROGRAM_ID                 VARCHAR2(10) PRIMARY KEY,
    PROGRAM_NAME               VARCHAR2(50),
    CATEGORY                   VARCHAR2(30),
    RECOMMENDED_DURATION_WEEKS NUMBER(3),
    SESSION_FREQUENCY          VARCHAR2(20),
    STATUS                     VARCHAR2(10)
);
CREATE TABLE SESSION_TBL (
    SESSION_ID        NUMBER(5) PRIMARY KEY,
    SENIOR_ID         VARCHAR2(10),
    PROGRAM_ID        VARCHAR2(10),
    SESSION_DATE      DATE,
    TIME_SLOT         VARCHAR2(20),
    CLINICIAN_NAME    VARCHAR2(50),
    BLOOD_PRESSURE    VARCHAR2(10),
    SUGAR_LEVEL       NUMBER(5,2),
    SESSION_NOTES     VARCHAR2(200),
    STATUS            VARCHAR2(10),

    CONSTRAINT fk_senior
        FOREIGN KEY (SENIOR_ID)
        REFERENCES SENIOR_TBL(SENIOR_ID),

    CONSTRAINT fk_program
        FOREIGN KEY (PROGRAM_ID)
        REFERENCES PROGRAM_TBL(PROGRAM_ID)
);
CREATE SEQUENCE SESSION_SEQ
START WITH 1
INCREMENT BY 1
NOCACHE;
